<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="student_module.list">
      <field name="name">Student</field>
      <field name="model">student_module.student</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="age"/>
          <field name="description"/>
          <field name="class_id"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    
    <record model="ir.ui.view" id="student_module.search_student">
      <field name="name">student_module.search_student</field>
      <field name="model">student_module.student</field>
      <field name="arch" type="xml"> 
        <search>
            <field name="name"/>
            <field name="description"/>
            <field name="class_id"/>
        </search>
      </field>
    </record>

    <record model="ir.ui.view" id="student_module.form">
      <field name="name">Student</field>
      <field name="model">student_module.student</field>
      <field name="arch" type="xml">
        <form string="Student">
            <group colspan="4">
                <group colspan="4" col="4">
                    <separator string="Student" colspan="4"/>
                    <field name="name"/>
                    <field name="age"/>
                    <field name="class_id"/>
                </group>
                <notebook colspan="4">
                    <page string="Description">
                        <field name="description" nolabel="1"/>
                    </page>
                </notebook>
            </group>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="student_module.open_student">
      <field name="name">Student</field>
      <field name="res_model">student_module.student</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_student" name="Student Manager" sequence="10"
          />
    <menuitem name="Student" id="student_student" parent="menu_student" 
              action="open_student"/>
  </data>
</odoo>

